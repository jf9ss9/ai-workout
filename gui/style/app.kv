WindowManager:
    MainWindow:
    RegisterWindow:
    ExercisesWindow:
    FaultsWindow:
    WorkoutWindow:

<MainWindow>:
    name: "main"

    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: 'Exercises'

        MDRaisedButton:
            text: "Register"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_release: app.root.current = "register"

        MDRaisedButton:
            text: "Exercise"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_release: app.root.current = "exercises"

        MDRaisedButton:
            text: "Faults"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_release:
                app.root.current = "faults"
                screen = app.root.get_screen("faults")
                screen.display_faults(screen.fetch_faults_from_db())

<ExercisesWindow>:
    name: "exercises"

    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: 'Exercises'

        ScrollView:
            do_scroll_x: False
            BoxLayout:
                id: exercise_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
        GridLayout:
            cols: 2
            MDRaisedButton:
                text: "Bicep Curls"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_release: app.root.current = "workout"

            MDRaisedButton:
                text: "Back to homepage"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_release: app.root.current = "main"

<FaultsWindow>:
    name: "faults"

    BoxLayout:
        orientation: 'vertical'
        MDToolbar:
            title: 'Faults'

        ScrollView:
            do_scroll_x: False
            BoxLayout:
                id: faults_list
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height


<WorkoutWindow>
    name: "workout"

    BoxLayout:
        orientation: "vertical"
        Image:
            id: workout_image
            source: ''
        MDRaisedButton:
            text: "START"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_press: app.start_animation()

<RegisterWindow>
    name: "register"

    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": .5, "center_y:": .5}
        padding: 20
        spacing: 30
        orientation: "vertical"

        MDLabel:
            text: "Register"
            font_size: 45
            font_style: "Button"
            size_hint_y: None
            halign: "center"
            height: self.texture_size[1]

        MDTextFieldRound:
            id: name
            hint_text: "name"
            icon_right: "account"
            size_hint_x: None
            width: 200
            pos_hint: {"center_x": .5}

        MDTextFieldRound:
            id: username
            hint_text: "username"
            icon_right: "account"
            size_hint_x: None
            width: 200
            pos_hint: {"center_x": .5}

        MDTextFieldRound:
            id: password
            hint_text: "password"
            icon_right: "eye-off"
            size_hint_x: None
            width: 200
            pos_hint: {"center_x": .5}
            password: True

        MDRoundFlatButton:
            text: "REGISTER"
            pos_hint: {"center_x": .5, "center_y": .5}

        MDRoundFlatButton:
            text: "CLEAR"
            pos_hint: {"center_x": .5, "center_y": .5}